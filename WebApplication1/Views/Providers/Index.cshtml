@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebApplication1.Models.Provider>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<nav class="navbar navbar-dark bg-dark px-2">
    <div>
        <a class="navbar-brand p-1" href="https://localhost:7119/Dishes/Index">Dishes</a>
        <a class="navbar-brand p-1" href="https://localhost:7119/Providers/Index">Providers</a>
        <a class="navbar-brand p-1" href="https://localhost:7119/Sales/Index">Sales</a>
    </div>
</nav>

<div class="p-2">
    <h1>Providers</h1>

    <form asp-action="Index" method="get">
        <div class="form-control">
            <p>
                Filter by name:<input type="text" name="searchStr" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
            </p>
        </div>
    </form>

    <p>
        <a asp-action="Create" class="btn btn-success my-1">Create New</a>
    </p>
</div>

<table class="table p-2">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_of_contract_sign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients_count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_of_contract_sign)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients_count)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>