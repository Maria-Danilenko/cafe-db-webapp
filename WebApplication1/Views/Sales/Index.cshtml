@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebApplication1.Models.Sales>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

<nav class="navbar navbar-dark bg-dark p-2">
    <div>
        <a class="navbar-brand p-1" href="https://localhost:7119/Dishes/Index">Dishes</a>
        <a class="navbar-brand p-1" href="https://localhost:7119/Providers/Index">Providers</a>
        <a class="navbar-brand p-1" href="https://localhost:7119/Sales/Index">Sales</a>
    </div>
</nav>

<div class="p-2">
    <h1>Sales</h1>
    <p>
        Total revenue: @WebApplication1.Controllers.SalesController.GetTotalRevenue()₴
    </p>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
</div>

<table class="table p-2">
    <thead>
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.Dish_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_of_sale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dish_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_sale)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
